import java.util.Arrays;
import java.util.List;
import java.util.Map;
import java.util.function.Function;
import java.util.stream.Collectors;

public class Top3FrequentWord {
    public static void main(String[] args) {
        List<String> sentences = Arrays.asList(
                "Java is awesome",
                "I love Java",
                "Java Stream API is powerful",
                "Streams in Java are useful"
        );
        Map<String, Long> wordFrequency = sentences.stream()
                .flatMap(sentence -> Arrays.stream(sentence.split(" "))) // flatten words
                .map(String::toLowerCase) // normalize
                .collect(Collectors.groupingBy(Function.identity(), Collectors.counting()));

         wordFrequency.entrySet().stream().sorted(Map.Entry.<String, Long>comparingByValue().reversed()
                        .thenComparing(Map.Entry::getKey))  // tie-break alphabetically
                .limit(3)//top 3 word
                .forEach(entry -> System.out.println(entry.getKey() + " " + entry.getValue()));
    }
}
